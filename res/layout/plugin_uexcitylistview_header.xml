<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/plugin_uexCityListView_main_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/localTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="定位城市"
            android:textColor="@color/plugin_uexCityListView_black_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/localLineView"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/plugin_uexCityListView_line_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/locationCityTextView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/plugin_uexcitylistview_rect_white_bg_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lastTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="最近访问的城市"
            android:textColor="@color/plugin_uexCityListView_black_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/lastLineView"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/plugin_uexCityListView_line_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lastvisitcitys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hotTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="热门城市"
            android:textColor="@color/plugin_uexCityListView_black_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/hotLineView"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@color/plugin_uexCityListView_line_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotcitysLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

</LinearLayout>