<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:orientation="vertical" 
    android:background="@android:color/white">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="12dp"
        android:background="@drawable/plugin_uexcitylistview_listitem_countryheader_bg"
        android:gravity="center_vertical"
        android:textColor="@color/plugin_uexCityListView_black_color" />

    <LinearLayout
        android:id="@+id/itemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plugin_uexcitylistview_listitem_selector"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:textColor="@color/plugin_uexCityListView_black_color"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/plugin_uexCityListView_line_color" />

</LinearLayout>